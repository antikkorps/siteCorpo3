#openssl rand -base64 32
# Configuration de la base de données SQLite
DB_CLIENT=sqlite3
DB_FILENAME=./data.db
DB_USE_NULL_AS_DEFAULT=true

# Configuration Directus
KEY=change-me
SECRET=change-me

# Configuration du serveur
HOST=0.0.0.0
PORT=8055
PUBLIC_URL=http://localhost:8055

# Configuration de l'authentification
AUTH_PROVIDERS=
AUTH_DISABLE_DEFAULT=false

# Configuration des emails (optionnel)
EMAIL_FROM=no-reply@example.com
EMAIL_TRANSPORT=smtp
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_SMTP_POOL=true
EMAIL_SMTP_SECURE=false

# Configuration du stockage des fichiers
STORAGE_LOCATIONS=local
STORAGE_LOCAL_DRIVER=local
STORAGE_LOCAL_ROOT=./uploads

# Configuration de la sécurité
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Configuration du cache (optionnel)
CACHE_ENABLED=false
CACHE_STORE=memory

# Configuration des logs
LOG_LEVEL=info

# Configuration de l'administration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me

# Configuration des extensions (optionnel)
EXTENSIONS_PATH=./extensions

# Configuration de la base de données (variables alternatives)
DATABASE_CLIENT=sqlite3
DATABASE_FILENAME=./data.db
DATABASE_USE_NULL_AS_DEFAULT=true

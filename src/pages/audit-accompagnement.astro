---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getParametresSite } from '../lib/directus';

const parametres = await getParametresSite();
---

<BaseLayout title="Audit & Accompagnement - MVO Stérilisation" description="Audit complet de vos processus de stérilisation et accompagnement personnalisé pour optimiser vos performances.">
	<main>
		<!-- Hero Section -->
		<section class="mvo-gradient text-white py-20">
			<div class="container mx-auto px-4 max-w-6xl">
				<div class="text-center">
					<h1 class="text-4xl md:text-5xl font-bold mb-6">
						Audit & Accompagnement
					</h1>
					<p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
						Évaluez et optimisez vos processus de stérilisation avec notre expertise et notre accompagnement personnalisé.
					</p>
				</div>
			</div>
		</section>

		<!-- Services d'Audit -->
		<section class="py-16 mvo-bg-white animate-section">
			<div class="container mx-auto px-4 max-w-6xl">
				<h2 class="text-3xl font-bold text-center mb-12 mvo-text-primary">
					Nos Services d'Audit
				</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					<div class="card">
						<div class="w-16 h-16 mvo-bg-primary rounded-full flex items-center justify-center text-white text-2xl mb-6">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><!-- Icon from Material Symbols Light by Google - https://github.com/google/material-design-icons/blob/master/LICENSE --><path fill="currentColor" d="m9.539 10.566l-.933.709q-.131.087-.242.003q-.112-.084-.062-.22l.333-1.123l-1.008-.824q-.125-.086-.072-.22q.053-.133.19-.133h1.224l.377-1.167q.05-.137.192-.137t.193.136l.377 1.168h1.225q.136 0 .189.133q.053.134-.072.22l-1.008.823l.333 1.124q.05.136-.061.22q-.112.084-.243-.003zm0 4.665q-2.398 0-4.065-1.666Q3.808 11.898 3.808 9.5t1.666-4.065T9.539 3.77t4.064 1.666q1.666 1.667 1.666 4.065q0 1.042-.369 2.017t-.97 1.668l5.909 5.907q.14.14.15.345q.009.203-.15.363q-.16.16-.354.16t-.354-.16l-5.908-5.908q-.75.639-1.725.989t-1.96.35m0-1q1.99 0 3.361-1.37q1.37-1.37 1.37-3.361T12.9 6.14T9.54 4.77T6.179 6.14T4.808 9.5t1.37 3.36t3.36 1.37"/></svg>
						</div>
						<h3 class="text-xl font-semibold mb-4">Audit Complet</h3>
						<p class="text-gray-600">
							Évaluation exhaustive de vos installations, équipements et processus de stérilisation.
						</p>
					</div>
					
					<div class="card">
						<div class="w-16 h-16 mvo-bg-secondary rounded-full flex items-center justify-center text-white text-2xl mb-6">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><!-- Icon from Material Symbols by Google - https://github.com/google/material-design-icons/blob/master/LICENSE --><path fill="currentColor" d="M1 21L12 2l11 19zm3.45-2h15.1L12 6zM12 18q.425 0 .713-.288T13 17t-.288-.712T12 16t-.712.288T11 17t.288.713T12 18m-1-3h2v-5h-2zm1-2.5"/></svg>
						</div>
						<h3 class="text-xl font-semibold mb-4">Analyse des Risques</h3>
						<p class="text-gray-600">
							Identification des points critiques et recommandations d'amélioration.
						</p>
					</div>
					
					<div class="card">
						<div class="w-16 h-16 mvo-bg-accent rounded-full flex items-center justify-center text-white text-2xl mb-6">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><!-- Icon from Solar by 480 Design - https://creativecommons.org/licenses/by/4.0/ --><g fill="none" stroke="currentColor" stroke-width="1.5"><path d="M2 12c0-4.714 0-7.071 1.464-8.536C4.93 2 7.286 2 12 2s7.071 0 8.535 1.464C22 4.93 22 7.286 22 12s0 7.071-1.465 8.535C19.072 22 16.714 22 12 22s-7.071 0-8.536-1.465C2 19.072 2 16.714 2 12Z"/><path stroke-linecap="round" stroke-linejoin="round" d="M6 15.8L7.143 17L10 14M6 8.8L7.143 10L10 7"/><path stroke-linecap="round" d="M13 9h5m-5 7h5"/></g></svg>
						</div>
						<h3 class="text-xl font-semibold mb-4">Conformité Réglementaire</h3>
						<p class="text-gray-600">
							Vérification du respect des normes et réglementations en vigueur.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Processus d'Accompagnement -->
		<section class="mvo-bg-gray-10 py-16 animate-section">
			<div class="container mx-auto px-4 max-w-6xl">
				<h2 class="text-3xl font-bold text-center mb-12 mvo-text-primary">
					Notre Processus d'Accompagnement
				</h2>
				
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					<div class="text-center">
						<div class="w-16 h-16 mvo-bg-primary rounded-full flex items-center justify-center text-white text-2xl mb-4 mx-auto">
							1
						</div>
						<h3 class="text-lg font-semibold mb-2">Diagnostic</h3>
						<p class="text-gray-600">Analyse de votre situation actuelle</p>
					</div>
					
					<div class="text-center">
						<div class="w-16 h-16 mvo-bg-secondary rounded-full flex items-center justify-center text-white text-2xl mb-4 mx-auto">
							2
						</div>
						<h3 class="text-lg font-semibold mb-2">Recommandations</h3>
						<p class="text-gray-600">Préconisations d'amélioration</p>
					</div>
					
					<div class="text-center">
						<div class="w-16 h-16 mvo-bg-accent rounded-full flex items-center justify-center text-white text-2xl mb-4 mx-auto">
							3
						</div>
						<h3 class="text-lg font-semibold mb-2">Mise en œuvre</h3>
						<p class="text-gray-600">Accompagnement dans la réalisation</p>
					</div>
					
					<div class="text-center">
						<div class="w-16 h-16 mvo-bg-green rounded-full flex items-center justify-center text-white text-2xl mb-4 mx-auto">
							4
						</div>
						<h3 class="text-lg font-semibold mb-2">Suivi</h3>
						<p class="text-gray-600">Contrôle et optimisation continue</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-16">
			<div class="container mx-auto px-4 max-w-4xl text-center">
				<h2 class="text-3xl font-bold mb-6 mvo-text-primary">
					Prêt à optimiser vos processus ?
				</h2>
				<p class="text-lg mb-8">
					Contactez-nous pour un audit personnalisé de vos installations de stérilisation.
				</p>
				<a href="/contact" class="btn-primary inline-block">
					Demander un Audit
				</a>
			</div>
		</section>
	</main>
</BaseLayout>

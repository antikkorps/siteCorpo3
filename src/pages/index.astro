---
import AnimatedCounter from '../components/AnimatedCounter.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import { getActualites, getImageUrl, getParametresSite, getServices, getTemoignages } from '../lib/directus';

// R√©cup√©ration des donn√©es
const services = await getServices();
const actualites = await getActualites(3);
const temoignages = await getTemoignages();
const parametres = await getParametresSite();

const SITE_TITLE = parametres?.titre || 'MVO St√©rilisation';
const SITE_DESCRIPTION = parametres?.description_site || 'Leader de la st√©rilisation m√©dicale en France';
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<!-- Hero Section -->
	<section class="mvo-gradient text-white py-24 text-center">
		<div class="container mx-auto px-4 max-w-6xl">
			<h1 class="hero-title text-5xl md:text-6xl font-bold mb-6 text-white leading-tight">
				Leader de la St√©rilisation M√©dicale
			</h1>
			<p class="hero-subtitle text-xl md:text-2xl mb-8 opacity-90 max-w-3xl mx-auto">
				Expertise unique et compl√©mentarit√© pour le monde m√©dical depuis notre cr√©ation
			</p>
			<a href="/services" class="hero-cta btn-secondary">
				D√©couvrir nos services
			</a>
		</div>
	</section>

	<!-- Services Section -->
	<section class="py-16 mvo-bg-gray-10 animate-on-scroll">
		<div class="container mx-auto px-4 max-w-6xl">
			<h2 class="text-4xl md:text-5xl font-bold text-center mb-12 mvo-text-primary animate-text">
				Nos Services
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 animate-cards">
				{services.map((service) => (
					<div class="card p-8">
						<div class="w-16 h-16 mvo-bg-green rounded-full flex items-center justify-center text-white text-2xl mb-6">
							{service.icone ? service.icone : 'üè•'}
						</div>
						<h3 class="text-2xl font-semibold mb-4 mvo-text-primary">
							{service.titre}
						</h3>
						<p class="text-gray-600 leading-relaxed">
							{service.description_courte}
						</p>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Stats Section -->
	<section class="mvo-bg-gray-10 py-16 animate-on-scroll">
		<div class="container mx-auto px-4 max-w-6xl">
			<div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center animate-cards">
				<div class="stat-item">
					<h3 class="text-4xl md:text-5xl font-bold mvo-text-green mb-2">
						<AnimatedCounter value="25" suffix="+" />
					</h3>
					<p class="text-gray-600 font-medium">Ann√©es d'exp√©rience</p>
				</div>
				<div class="stat-item">
					<h3 class="text-4xl md:text-5xl font-bold mvo-text-green mb-2">
						<AnimatedCounter value="500" suffix="+" />
					</h3>
					<p class="text-gray-600 font-medium">√âtablissements servis</p>
				</div>
				<div class="stat-item">
					<h3 class="text-4xl md:text-5xl font-bold mvo-text-green mb-2">
						<AnimatedCounter value="99.9" suffix="%" />
					</h3>
					<p class="text-gray-600 font-medium">Taux de satisfaction</p>
				</div>
				<div class="stat-item">
					<h3 class="text-4xl md:text-5xl font-bold mvo-text-green mb-2">
						<AnimatedCounter value="24/7" />
					</h3>
					<p class="text-gray-600 font-medium">Support disponible</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Testimonials Section -->
	{temoignages.length > 0 && (
		<section class="py-16 mvo-bg-white animate-on-scroll">
			<div class="container mx-auto px-4 max-w-6xl">
				<h2 class="text-4xl md:text-5xl font-bold text-center mb-12 mvo-text-primary animate-text">
					T√©moignages Clients
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 animate-cards">
					{temoignages.slice(0, 3).map((temoignage) => (
						<div class="mvo-bg-gray-10 p-8 rounded-xl border-l-4 border-mvo-green">
							<p class="text-gray-700 italic mb-4 leading-relaxed">
								"{temoignage.temoignage}"
							</p>
							<div class="font-semibold text-gray-700">
								{temoignage.prenom_client} {temoignage.nom_client}
								{temoignage.fonction && (
									<span class="text-gray-500 text-sm"> - {temoignage.fonction}</span>
								)}
							</div>
							<div class="text-gray-500 text-sm">
								{temoignage.etablissement}
							</div>
						</div>
					))}
				</div>
			</div>
		</section>
	)}

	<!-- News Section -->
	{actualites.length > 0 && (
		<section class="py-16 animate-on-scroll">
			<div class="container mx-auto px-4 max-w-6xl">
				<h2 class="text-4xl md:text-5xl font-bold text-center mb-12 mvo-text-primary animate-text">
					Actualit√©s
				</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 animate-cards animate-images">
					{actualites.map((actualite) => (
						<article class="card overflow-hidden">
							{actualite.image_principale && (
								<img 
									src={getImageUrl(actualite.image_principale, 400, 200)} 
									alt={actualite.titre}
									class="w-full h-48 object-cover"
								/>
							)}
							<div class="p-6">
								<div class="text-gray-500 text-sm mb-2">
									{new Date(actualite.date_publication || actualite.date_created).toLocaleDateString('fr-FR')}
								</div>
								<h3 class="text-xl font-semibold mb-4 text-gray-700">
									{actualite.titre}
								</h3>
								<p class="text-gray-600 leading-relaxed">
									{actualite.contenu.substring(0, 150)}...
								</p>
							</div>
						</article>
					))}
				</div>
			</div>
		</section>
	)}
</BaseLayout>

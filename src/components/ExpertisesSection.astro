					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	/* Pseudo-éléments ::before pour chaque carte - TAILLES UNIFORMES */
	.card-audit::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		transform: skew(-10deg) scale(0.8) translateX(-100%);
		background: linear-gradient(135deg, #10b981, #059669, #047857);
		opacity: 0;
		z-index: -10;
		transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
		border-radius: 20px;
		box-shadow: 0 20px 40px rgba(16, 185, 129, 0.3);
	}

	.card-sterilisation::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		transform: skew(-10deg) scale(0.8) translateX(-100%);
		background: linear-gradient(135deg, #3b82f6, #2563eb, #1d4ed8);
		opacity: 0;
		z-index: -10;
		transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
		border-radius: 20px;
		box-shadow: 0 20px 40px rgba(59, 130, 246, 0.3);
	}

	.card-formation::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		transform: skew(-10deg) scale(0.8) translateX(-100%);
		background: linear-gradient(135deg, #f97316, #ea580c, #dc2626);
		opacity: 0;
		z-index: -10;
		transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
		border-radius: 20px;
		box-shadow: 0 20px 40px rgba(249, 115, 22, 0.3);
	}

	/* État d'animation active */
	.card-audit.animate-pseudo-active::before {
		opacity: 0.15;
		transform: skew(-10deg) scale(1) translateX(0);
		transition-delay: 0.2s;
	}

	.card-sterilisation.animate-pseudo-active::before {
		opacity: 0.15;
		transform: skew(-10deg) scale(1) translateX(0);
		transition-delay: 0.4s;
	}

	.card-formation.animate-pseudo-active::before {
		opacity: 0.15;
		transform: skew(-10deg) scale(1) translateX(0);
		transition-delay: 0.6s;
	}

	/* Animation de sortie */
	.card-audit.animate-pseudo-out::before,
	.card-sterilisation.animate-pseudo-out::before,
	.card-formation.animate-pseudo-out::before {
		opacity: 0;
		transform: skew(-10deg) scale(0.8) translateX(-100%);
		transition: all 0.5s ease;
		transition-delay: 0s;
	}

	/* Animation au hover - simple et élégant */
	.card-audit:hover::before,
	.card-sterilisation:hover::before,
	.card-formation:hover::before {
		opacity: 0.25;
		transform: skew(-10deg) scale(1.02);
		transition: all 0.3s ease;
	}

	/* Amélioration des cartes - Styles spécifiques à ExpertisesSection */
	.expertise-card {
		border: none !important;
		background: rgba(255, 255, 255, 0.95);
		backdrop-filter: blur(15px);
		border-radius: 24px;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
		overflow: hidden;
		border: 1px solid rgba(255, 255, 255, 0.2);
		position: relative;
		min-height: 420px; /* Hauteur minimale pour uniformité */
		display: flex;
		flex-direction: column;
	}

	.expertise-card:hover {
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.12);
		border: 1px solid rgba(16, 185, 129, 0.1);
		transform: translateY(-4px);
	}

	/* Assurer l'uniformité des cartes dans la grille */
	.expertise-grid .expertise-card {
		height: 100%;
		min-height: 450px;
	}

	/* Styles pour les icônes */
	.icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		height: 100%;
	}

	.icon svg {
		display: block;
		margin: auto;
	}

	/* Ajout d'un gradient subtil sur les cartes */
	.expertise-card::after {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 2px;
		background: linear-gradient(90deg, transparent, rgba(16, 185, 129, 0.5), transparent);
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.expertise-card:hover::after {
		opacity: 1;
	}

	/* Amélioration du focus pour l'accessibilité */
	.expertise-card a:focus {
		outline: 2px solid rgba(16, 185, 129, 0.5);
		outline-offset: 2px;
		border-radius: 8px;
	}
</style>

<script>
	// Animation des pseudo-éléments avec classes CSS
	function initPseudoElementsAnimation() {
		const cards = document.querySelectorAll('.animate-pseudo-card');
		
		if (cards.length === 0) return;

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					// Animation d'entrée avec délai progressif
					const index = Array.from(cards).indexOf(entry.target);
					setTimeout(() => {
						entry.target.classList.add('animate-pseudo-active');
						entry.target.classList.remove('animate-pseudo-out');
					}, index * 200);
				} else {
					// Animation de sortie immédiate
					entry.target.classList.remove('animate-pseudo-active');
					entry.target.classList.add('animate-pseudo-out');
				}
			});
		}, {
			threshold: 0.4,
			rootMargin: '0px 0px -100px 0px'
		});

		cards.forEach(card => {
			observer.observe(card);
		});

		// Nettoyer l'observer lors de la navigation
		document.addEventListener('astro:page-load', () => {
			observer.disconnect();
			setTimeout(() => {
				cards.forEach(card => {
					observer.observe(card);
				});
			}, 100);
		});
	}

	// Initialiser les animations quand le DOM est prêt
	document.addEventListener('DOMContentLoaded', initPseudoElementsAnimation);
	document.addEventListener('astro:page-load', initPseudoElementsAnimation);
</script>


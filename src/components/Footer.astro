---
import { getImageUrl, getParametresSite } from '../lib/directus';

const parametres = await getParametresSite();
---

<footer class="bg-gray-900 text-white">
	<div class="container mx-auto px-4 max-w-6xl py-12">
		<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
			<!-- Company Info -->
			<div class="md:col-span-2">
				<div class="flex items-center mb-6">
					{parametres?.logo ? (
						<img 
							src={getImageUrl(parametres.logo, 150, 50)} 
							alt={parametres.titre || 'MVO Stérilisation'}
							class="h-10 w-auto"
						/>
					) : (
						<span class="text-2xl font-bold text-white">
							{parametres?.titre || 'MVO'}
						</span>
					)}
				</div>
				<p class="text-gray-300 mb-6 leading-relaxed">
					{parametres?.description_site || 'Leader de la stérilisation médicale en France, MVO offre une expertise unique et une complémentarité pour le monde médical.'}
				</p>
				<div class="flex space-x-4">
					{parametres?.linkedin && (
						<a href={parametres.linkedin} class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-blue-600 transition-colors">
							📱
						</a>
					)}
					{parametres?.facebook && (
						<a href={parametres.facebook} class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-blue-600 transition-colors">
							📘
						</a>
					)}
					{parametres?.youtube && (
						<a href={parametres.youtube} class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-blue-600 transition-colors">
							📺
						</a>
					)}
				</div>
			</div>

			<!-- Quick Links -->
			<div>
				<h3 class="text-lg font-semibold mb-6">Liens rapides</h3>
				<ul class="space-y-3">
					<li>
						<a href="/" class="text-gray-300 hover:text-white transition-colors">
							Accueil
						</a>
					</li>
					<li>
						<a href="/services" class="text-gray-300 hover:text-white transition-colors">
							Services
						</a>
					</li>
					<li>
						<a href="/actualites" class="text-gray-300 hover:text-white transition-colors">
							Actualités
						</a>
					</li>
					<li>
						<a href="/contact" class="text-gray-300 hover:text-white transition-colors">
							Contact
						</a>
					</li>
				</ul>
			</div>

			<!-- Contact Info -->
			<div>
				<h3 class="text-lg font-semibold mb-6">Contact</h3>
				<div class="space-y-3 text-gray-300">
					<div class="flex items-start">
						<span class="mr-2">📍</span>
						<div>
							{parametres?.adresse || '11 Place des Comtes du Maine 72000 LE MANS'}
						</div>
					</div>
					<div class="flex items-center">
						<span class="mr-2">📞</span>
						<a href={`tel:${parametres?.telephone || '0970711865'}`} class="hover:text-white transition-colors">
							{parametres?.telephone || '09 70 71 18 65'}
						</a>
					</div>
					<div class="flex items-center">
						<span class="mr-2">✉️</span>
						<a href={`mailto:${parametres?.email || 'contact@mvo-sterilisation.fr'}`} class="hover:text-white transition-colors">
							{parametres?.email || 'contact@mvo-sterilisation.fr'}
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Bottom Bar -->
		<div class="border-t border-gray-800 mt-12 pt-8">
			<div class="flex flex-col md:flex-row justify-between items-center">
				<div class="text-gray-400 text-sm mb-4 md:mb-0">
					© 2024 {parametres?.titre || 'MVO Stérilisation'}. Tous droits réservés.
				</div>
				<div class="flex space-x-6 text-sm">
					<a href="/mentions-legales" class="text-gray-400 hover:text-white transition-colors">
						Mentions légales
					</a>
					<a href="/politique-confidentialite" class="text-gray-400 hover:text-white transition-colors">
						Politique de confidentialité
					</a>
				</div>
			</div>
		</div>
	</div>
</footer>
